%h1  登录 迷蝴蝶 - mihudie.com
%h2
  = link_to "尚未注册?", register_path, {:rel => "nofollow"} 

%div{:class => "form-model"}
  = form_tag(login_path, :class => "form") do
    = label_tag(:email, "电子邮箱")
    = text_field_tag(:email, nil, {:class => "ipt-text", :placeholder => "电子邮箱"})
    = label_tag(:password, "密码")
    = password_field_tag(:password, nil, {:class => "ipt-text", :placeholder => "密码"})
    %div{:class => "form-action clearfix"}
      = submit_tag("登录", :class => "btn btn-primary")
