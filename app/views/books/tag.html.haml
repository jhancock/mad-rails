%h2
  = "#{@sort} #{@tag.name} books - page #{@page} - "
  - opposite_sort = @sort =='recent' ? 'popular' : 'recent'
  = link_to "sort by #{opposite_sort}", books_by_tag_path(tag: @tag.name, sort: opposite_sort)

= page_entries_info @books
= paginate @books, :params => {:controller => 'books', :action => 'tag', tag: @tag.name, sort: @sort}
%hr
%div{:class => "boo-show index-list"}
  %h3
    书库
  %div{:class => "book-list"}
    %ul
      = render @books
