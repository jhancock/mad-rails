%div{:class => "main-text"}
  %h2
    = "#{@sort} #{@tag.name} books - page #{@page}"
    -#- opposite_sort = @sort =='recent' ? 'popular' : 'recent'
    -#= link_to "sort by #{opposite_sort}", books_by_tag_path(tag: @tag.name, sort: opposite_sort)

= render partial: 'shared/my_collection', locals: {collection: @books, url_params: {controller: 'books', action: 'tag', tag: @tag.name, sort: @sort}, sort: @sort, name: nil}
