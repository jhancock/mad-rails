%div{:class => "main-text hide-mobile"}
  %h1
    = "#{@sort} #{@tag.name} books - page #{@page}"
    -#- opposite_sort = @sort =='recent' ? 'popular' : 'recent'
    -#= link_to "sort by #{opposite_sort}", books_by_tag_path(tag: @tag.name, sort: opposite_sort)

- alternate_sort = @sort =='recent' ? 'popular' : 'recent'
- alternate_sort_path = books_by_tag_path(tag: @tag.name, sort: alternate_sort)

= render partial: 'shared/my_collection', locals: {collection: @books, url_params: {controller: 'books', action: 'tag', tag: @tag.name, sort: @sort}, alternate_sort: alternate_sort, alternate_sort_path: alternate_sort_path, name: nil, current_page: @page}
