%h2
  #{@book.title} - #{@book.author} - chapter #{@page}

:plain
  #{@content}

%div
  - if @page > 1  
    %a{:class => "btn btn-warning", :href => read_book_path(author: @book.author, title: @book.title, page: (@page - 1)), :rel => "nofollow"}
      « 前一页
  - if @page < @book.chunks
    %a{:class => "btn btn-primary", :href => read_book_path(author: @book.author, title: @book.title, page: (@page + 1)), :rel => "nofollow"}
      下一页 »

