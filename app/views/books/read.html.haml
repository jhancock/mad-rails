%div{:class => "reading-page"}
  %div{:class => "reading-page-md"}
    :plain
      #{@content}

%div{:class => "page-bar"}
  - if @page > 1  
    %a{:class => "button-orange", :href => read_book_path(author: @book.author, title: @book.title, page: (@page - 1)), :rel => "nofollow"}
      « 前一页
  - if @page < @book.chunks
    %a{:class => "button-primary", :href => read_book_path(author: @book.author, title: @book.title, page: (@page + 1)), :rel => "nofollow"}
      下一页 »
