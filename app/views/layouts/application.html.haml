!!! Strict
%html{ html_attrs("zh-CN") }
  %head
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "content-type"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= @page_title
    %meta{:name => "keywords", :content => "#{@page_keywords}"}
    %meta{:name => "description", :content => "#{@page_description}"}
    = stylesheet_link_tag '/stylesheets/mihudie', media: 'all'
    = javascript_include_tag '/javascripts/jquery-1.11.1.min'
    = javascript_include_tag '/javascripts/mihudie'
    = csrf_meta_tags

  %body
    = render 'layouts/header'
    %div{:class => "content clearfix"}
      = render 'layouts/content_left'
      %div{:class => "content_main" :role => "main"}
        %div{:class => "main_text"}
          - flash.each do |name, msg|
            = content_tag :div, msg, class: name
          = yield
          = render 'layouts/footer'        
